        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw5Komut(8)">SIRT DAYAMA AÇ</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw5Komut(9)">SIRT DAYAMA KAPAT</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw6Komut(0)">BOYUN SIKIŞTIRMA AÇ</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw6Komut(1)">BOYUN SIKIŞTIRMA KAPAT</button>
