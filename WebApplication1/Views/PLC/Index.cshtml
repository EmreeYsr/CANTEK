        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw5Komut(2)">YAN SIKIŞTIRMA AÇ</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw5Komut(3)">YAN SIKIŞTIRMA KAPAT</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw5Komut(4)">KUYRUK KAPAK AÇ</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw5Komut(5)">KUYRUK KAPAK KAPAT</button>
