        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw6Komut(5)">KABİN GERİ</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw6Komut(6)">KABİNİN İÇİNDEN HAYVANI BOŞALT</button>
        
        </div>






    <div class="right-container">
        <br />
        <div class="VeriMetni">
          
            <p>MW5: <span id="mw5data">Bekleniyor...</span></p>
            <p>MW6: <span id="mw6data">Bekleniyor...</span></p>
            <hr />
        </div>

        <br />
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw6Komut(13)">RESET</button>
        <br />
        <h6>KİLİT MEKANİZMASI</h6>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw6Komut(14)">CIKIŞ KİLİT KAPAT</button>
        <button type="button" class="btn btn-secondary btn-lg btn-block" onclick="mw6Komut(15)">CIKIŞ KILIT AÇ</button>
    </div>



    <script>
       
        setInterval(function () {
            fetch('/PLC/Okuma')
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        document.getElementById("mw5data").innerText = data.mw5;
                        document.getElementById("mw6data").innerText = data.mw6;
                    } else {
                        console.error(data.message);
                    }
                })
                .catch(error => console.error("Hata:", error));
        }, 1000);
    </script>


</div>
